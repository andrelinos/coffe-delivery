{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": [
    "simple-import-sort",
    "react-refresh"
  ],
  "ignorePatterns": [
    "dist",
    ".eslintrc.json"
  ],
  "rules": {
    "simple-import-sort/imports": "error",
    "@typescript-eslint/no-unused-vars": "off",
    "react-refresh/only-export-components": [
      "warn",
      {
        "allowConstantExport": true
      }
    ]
  }
}